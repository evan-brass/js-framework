{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
			"single", 
			{ 
				"avoidEscape": true
			}
        ],
        "semi": [
            "error",
            "always"
		],
		"no-unused-vars": [
			"error",
			{
				"vars": "all",
				"args": "all",
				"varsIgnorePattern": "^_",
				"argsIgnorePattern": "^_"
			}
		],
		"no-case-declarations": [
			"off"
		]
    }
}